{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["node"],
    "noImplicitAny": false,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./libs/components/*"],
      "@/types/*": ["./libs/types/*"],
      "@/hooks/*": ["./libs/hooks/*"],
      "@/enums/*": ["./libs/enums/*"],
      "@/auth/*": ["./libs/auth/*"],
      "@/scss/*": ["./scss/*"]
    },
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "libs/**/*",
    "scss/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
